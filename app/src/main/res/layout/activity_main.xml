<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="spread"
        tools:context="com.sample.foo.samplecalculator.MainActivity">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/upColor"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText"
            android:background="@color/upColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoTextView"
            android:maxLength="25"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="2"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@+id/editText"
            android:background="@color/firstLinear">

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="×"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/openBracket"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/linear"
            android:text="("
            android:textSize="30sp" />

        <Button
            android:id="@+id/closeBracket"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/linear"
            android:layout_toRightOf="@id/openBracket"
            android:text=")"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/linear"
            android:layout_toRightOf="@id/closeBracket"
            android:text="Del."
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSeven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/openBracket"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/closeBracket"
            android:layout_toRightOf="@id/buttonSeven"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonNine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonDel"
            android:layout_toRightOf="@id/buttonEight"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonFour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonSeven"
            android:text="4"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonFive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonEight"
            android:layout_alignRight="@id/buttonEight"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSix"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonNine"
            android:layout_alignRight="@id/buttonNine"
            android:text="6"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonOne"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonFour"
            android:text="1"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonTwo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonFive"
            android:layout_alignRight="@id/buttonEight"
            android:text="2"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonThree"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonSix"
            android:layout_alignRight="@id/buttonNine"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonThree"
            android:layout_toRightOf="@id/buttonZero"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonZero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonTwo"
            android:layout_alignRight="@id/buttonEight"
            android:text="0"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonClear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonOne"
            android:text="C"
            android:textSize="30sp" />


    </RelativeLayout>
</layout>